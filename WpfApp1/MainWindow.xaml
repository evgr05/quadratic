<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="textBoxA" Margin="10" Width="50" Text="1"/>
            <TextBlock HorizontalAlignment="Center">x^2 +</TextBlock>
            <TextBox x:Name="textBoxB" Margin="10" Width="50" Text="0"/>
            <TextBlock HorizontalAlignment="Center">x +</TextBlock>
            <TextBox x:Name="textBoxC" Margin="10" Width="50" Text="0"/>
            <Button HorizontalAlignment="Center" Margin="10"  Click="SolveButton_Click">Рассчитать</Button>
            <TextBlock x:Name="resultText" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
